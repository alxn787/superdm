generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @default(uuid()) 
  publicKey     String      @unique
  SuperCost     Int         @default(0)
  image         String?
  sentChats     SuperChat[] @relation("SentChats")  
  receivedChats SuperChat[] @relation("ReceivedChats") 
}

model SuperChat {
  id      String @id @default(uuid()) 
  fromId  String
  toId    String
  from    User   @relation("SentChats", fields: [fromId], references: [id])
  to      User   @relation("ReceivedChats", fields: [toId], references: [id])
}

model Creator {
  id      String @id @default(uuid()) 
  publicKey     String      @unique
  SuperCost     Int         @default(0)
  image         String?     
  Name          String?     @default("Anonymous")
}
